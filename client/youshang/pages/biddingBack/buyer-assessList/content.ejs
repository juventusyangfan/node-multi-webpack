<div class="back_main">
    <div class="back_main_title">
        <span class="active">评价记录</span>
    </div>
    <div class="back_main_content">

        <div class="back_main_list" style="border-top:none;" id="supplier">
            <div class="back_list_top">
                <span class="floatR">共<span>{{count}}</span>条记录</span>
            </div>
            <div class="material_list">
                <table>
                    <colgroup>
                        <col width="100">
                        <col width="150">
                        <col width="150">
                    </colgroup>
                    <thead>
                    <tr>
                        <th>评价等级</th>
                        <th>评价时间</th>
                        <th>操作人</th>

                    </tr>
                    </thead>
                    <tbody class="page_list">
                    <tr v-if="loading">
                        <td colspan="3">
                            <div class="page_loading"></div>
                        </td>
                    </tr>
                    <template v-if="list.length>0">
                    <tr v-for="(item,index) in list">
                        <td>{{item.supplier_level_name}}</td>
                        <td>{{item.create_time}}</td>
                        <td>{{item.real_name}}</td>
                    </tr>
                    </template>
                    <tr v-else><td colspan="3"><div class="page_list_noneBg"></div><p class="page_list_noneCon" style="width: 100%;margin-bottom: 10px;font-size: 24px;color: #999;text-align: center;">暂无评价记录〜</p></td></tr>
                    </tbody>
                </table>
                <div class="clear"></div>
            </div>
            <div id="pages">
                <vue-page @get-list="getSupplier" :count="count" :limit="10" v-if="list.length>0"></vue-page>
            </div>
        </div>
    </div>
</div>