<div class="back_main">
    <div class="back_main_title">
        <span>企业供应商</span>
        <a href="javascript:;" class="back_title_btn floatR">申请成为企业供应商</a>
    </div>
    <div class="back_main_content">
        <div class="back_main_search">
            <select name="join_way" value="">
                <option selected="" value="">成为友商的方式</option>
                <option value="1">申请加入</option>
                <option value="2">邀请加入</option>
            </select>
            <input type="text" name="company_name" placeholder="输入关键字：采购商名称" class="cjy-input-">
            <a href="javascript:;" class="btn_confirm">确认</a>
        </div>
        <div class="back_main_list">
            <div class="material_list">
                <table>
                    <colgroup>

                        <col width="50">

                        <col width="200">

                        <col width="150">

                        <col width="100">

                        <col width="100">

                    </colgroup>
                    <thead>
                    <tr>

                        <th>序号</th>

                        <th>采购商名称</th>

                        <th>申请/加入时间</th>

                        <th>加入方式</th>

                        <th>状态</th>

                    </tr>
                    </thead>
                    <tbody class="page_list">
                    <tr v-if="loading">
                        <td colspan="6">
                            <div class="page_loading"></div>
                        </td>
                    </tr>
                    <template v-if="list.length>0">
                        <tr v-for="(item,index) in list">
                            <td>{{index+1}}</td>
                            <td>{{item.buyer_name}}</td>
                            <td>{{item.add_time}}</td>
                            <td>{{item.join_way}}</td>
                            <td>{{item.status}}</td>
                            <td>{{item.option}}</td>
                            <input type="hidden" name="id" :value="item.id">
                            <input type="hidden" name="supplier_file" :value="item.supplier_file">
                        </tr>
                    </template>
                    <tr v-else><td colspan="6"><div class="page_list_noneBg"></div><p class="page_list_noneCon" style="width: 100%;margin-bottom: 60px;font-size: 24px;color: #999;text-align: center;">没有找到相关内容</p></td></tr>
                    </tbody>
                </table>
                <div class="clear"></div>
            </div>
            <div id="pages" class="page_container_wrap">
                <vue-page @get-list="getSupplier" :count="count" :limit="10" v-if="list.length>0"></vue-page>
            </div>
        </div>
        <input type="hidden" name="role_type" value="2">
    </div>
</div>